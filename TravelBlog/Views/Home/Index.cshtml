@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12">
        <div id="carouselExample" class="carousel slide"></div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img src="/TravelBlog/wwwroot/img/12d-window-seat-0066.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="/TravelBlog/wwwroot/img/mountain_pass.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="/TravelBlog/wwwroot/img/4899_Disney2023LandingPage_2024_40268216-ecff-4596-b011-a889255e75d2.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-6">
        <div class="ms-5 mt-5">
            <h1 class="heroTitle">Sharing our travels with you and yourself families</h1>
            <div class="subtitle">
                <p>Follow along with using as we show you the destinations, hotels, attractions, and restaurants that we visit.</p>
                <br />
                <br />
                <strong>Built with pride using cutting edge tech:</strong>
                <br />
                <div class="d-flex align-items-center mt-3">
                    @* Show Techs here*@
                    <figure>
                        <img src="https://devicons.railway.app/i/dot-net.svg" class="imgicon" />
                        <figcaption>ASP.NET</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/csharp.svg" class="imgicon" />
                        <figcaption>C#</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/postgresql.svg" class="imgicon" />
                        <figcaption>Postgres</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/bootstrap.svg" class="imgicon" />
                        <figcaption>Bootstrap</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/railway-dark.svg" class="imgicon"/>
                        <figcaption>Railway</figcaption>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <img src="/img/Tech.svg" class="img-fluid mt-5" />
    </div>
    <div class="col-12">
        <div class="row mt-5">
            <div class="col-12 btn text-center mb-3">
                <a class="btn btn-lg btn-outline-primary rounded-pill px-5" style="height:min-content" asp-controller="BlogPosts" asp-action="Index">Welcome!</a>
            </div>
        </div>
    </div>
</div>